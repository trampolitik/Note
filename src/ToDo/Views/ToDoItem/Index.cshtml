@model IEnumerable<ToDo.Models.ToDoItem>


@{
    ViewData["Title"] = "Index";
    
}



<h1>Note</h1>

<p>
    <a asp-action="AddOrEdit">Create New</a>
</p>

   
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tittle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tittle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
                <td>
                    @if(item.Image.Length < 1){
                        <p>no image</p>
                    }
                    else
                    {
                       <img style='width:100px; height:80px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" />
                    }
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
